{
  "type": "CheckBox",
  "description": "A check box widget.",
  "include": ["Widget"],
  "properties": {
    "selection": {
      "type": "boolean",
      "default": "false",
      "description": "The checked state of the check box."
    },
    "text": {
      "type": "string",
      "description": "The label text of the check box."
    }
  },
  "events": {
    "change:selection": {
      "parameters": [
        {"name": "widget", "type": "this"},
        {"name": "selection", "type": "boolean", "description": "The new value of *[selection](#selection)*."},
        {"name": "options", "type": "any"}
      ],
      "description": "Fired when the check box is checked or unchecked."
    },
    "select": {
      "parameters": [
        {"name": "widget", "type": "this"},
        {"name": "selection", "type": "boolean", "description": "The new value of *[selection](#selection)*."},
        {"name": "options", "type": "any"}
      ],
      "description": "Fired when the check box is checked or unchecked by the user."
    }
  },
  "links": [
    {
      "title" : "Simple Checkbox snippet",
      "path" : "${GITHUB_BRANCH}/snippets/checkbox/checkbox.js"
    }
  ]
}
